<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/backgroundHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abuelwafa_.za3a2.LogReg.RegistrationActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New account"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:id="@+id/address"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="41dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20">

                <EditText
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:id="@+id/photo"
                    android:hint="@string/photo"
                    android:background="@drawable/register_form"
                    android:width="120dp"
                    android:height="100dp"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="50" />
                />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0px"
                    android:layout_marginRight="50px"
                    android:layout_height="match_parent"
                    android:background="@drawable/register_form"
                    android:layout_weight="60">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstName"
                        android:fontFamily="casual"
                        android:hint="@string/FirstName"
                        android:layout_weight="60" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/LastName"
                        android:fontFamily="casual"
                        android:hint="@string/LastName"
                        android:layout_weight="60" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="80">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                    android:hint="@string/email"
                    android:drawablePadding="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="35px"
                    android:padding="10dp"
                    android:fontFamily="casual"
                    android:background="@drawable/register_form"
                    android:id="@+id/Email"
                    android:layout_weight="16" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:id="@+id/Password"
                    android:background="@drawable/register_form"
                    android:layout_weight="16"
                    android:fontFamily="casual"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/repassword"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                    android:drawablePadding="15dp"
                    android:padding="10dp"
                    android:id="@+id/RePassword"
                    android:background="@drawable/register_form"
                    android:layout_weight="16"
                    android:fontFamily="casual"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_device_hub_black_24dp"
                    android:hint="@string/job"
                    android:drawablePadding="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="35px"
                    android:padding="10dp"
                    android:background="@drawable/register_form"
                    android:id="@+id/job"
                    android:layout_weight="16"
                    android:fontFamily="casual"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:drawablePadding="15dp"
                    android:padding="10dp"
                    android:background="@drawable/register_form"
                    android:id="@+id/phone"
                    android:layout_weight="16"
                    android:fontFamily="casual"
                    android:hint="@string/Phone"
                    android:textColor="@color/black"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                    android:drawablePadding="15dp"
                    android:padding="10dp"
                    android:background="@drawable/register_form"
                    android:layout_weight="16"
                    android:hint="@string/Address"
                    android:textColor="@color/black"
                    android:id="@+id/addresses"
                    android:fontFamily="casual"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/buttons"
                    android:id="@+id/but_register"
                    android:layout_weight="17" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
